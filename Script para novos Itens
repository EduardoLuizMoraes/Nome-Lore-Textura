function init(event) {
    var item = event.getItem();

    // Define o nome personalizado usando o m√©todo correto
    item.setCustomName("nome");

    // Define a lore como array Java
    var lore = Java.to(["linha 1", "linha 2"], "java.lang.String[]");
    item.setLore(lore);
    
    item.setTexture("imagem qualquer")
    item.setColor("0xFFFFFF");
    item.setMaxStackSize(1);
}
